<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropertyDetail"
    android:id="@+id/replace">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:fitsSystemWindows="true"
            app:contentScrim="#0e0d0e"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/studentName"
                android:visibility="invisible"/>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnRating"
        android:src="@drawable/ic_baseline_star_rate_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:layout_anchor="@id/appbarlayout"
        app:layout_anchorGravity="bottom|right|end"
        app:pressedTranslationZ="0dp"
        app:useCompatPadding="true"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:orientation="vertical"
                        android:padding="2dp">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtPropertyName"
                            android:layout_marginTop="16dp"
                            android:paddingLeft="12dp"
                            android:text="Property Name"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/txtAddress"
                            android:layout_marginTop="12dp"
                            android:lineSpacingMultiplier="1.5"
                            android:padding="12dp"
                            android:text="Address"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".7"
                            android:gravity="center"
                            android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/layoutPrice"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:ignore="Suspicious0dp"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="3"
                                android:src="@drawable/ic_baseline_euro_24"
                                />
                            <TextView
                                android:id="@+id/txtPrice"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                tools:ignore="Suspicious0dp"
                                android:layout_weight="4"
                                android:text="125"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                tools:ignore="Suspicious0dp"
                                android:layout_weight="5"
                                android:text="/week"
                                android:textColor="#BABABA"
                                android:textSize="17sp"
                                android:textStyle="bold"/>
                        </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvlEmail"
                                android:textColor="@color/white">

                            </TextView>

                        </LinearLayout>


                    </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                        <RatingBar

                            android:id="@+id/avgRating"
                            style="?android:attr/ratingBarStyleIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:progressTint="#ffd54e"
                            android:secondaryProgressTint="@android:color/transparent"
                            android:stepSize="0.5"
                            android:layout_gravity="start"
                           />

                        </LinearLayout>


                        <Button
                            android:layout_margin="8dp"
                            android:id="@+id/btnEnquire"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:elevation="4dp"
                            android:textColor="@color/grey_2"
                            app:pressedTranslationZ="0dp"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/sharp_email_black_18dp"
                            android:drawablePadding="4dp"
                            android:layout_weight="1"
                            android:text="Enquire" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtDescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:lineSpacingMultiplier="1.5"
                            android:padding="12dp"
                            android:text="Description"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtRentalPeriod"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:lineSpacingMultiplier="1.5"
                                android:padding="12dp"
                                android:text="Rental Period"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/txtBathrooms"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:lineSpacingMultiplier="1.5"
                                android:padding="12dp"
                                android:text="Bathrooms"
                                android:textColor="@color/black"
                                android:textSize="14sp"
                                android:textStyle="bold" />


                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtAmenities"
                        android:layout_marginTop="12dp"
                        android:lineSpacingMultiplier="1.5"
                        android:padding="12dp"
                        android:text="Amenities"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Communal Kitchen"
                            android:textSize="14sp"
                            android:layout_marginStart="20dp"/>

                        <ImageView
                            android:id="@+id/imgKitcen"
                            android:layout_width="14sp"
                            android:layout_height="14sp"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/tick"/>

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Washing Machine"
                                android:textSize="14sp"
                                android:layout_marginStart="20dp"/>

                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/imgWashingMachine"
                                android:layout_width="14sp"
                                android:layout_height="14sp"
                                android:layout_marginStart="4dp"
                                android:background="@drawable/tick"/>

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TV"
                            android:textSize="14sp"
                            android:layout_marginStart="20dp"/>

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/imgTV"
                            android:layout_width="14sp"
                            android:layout_height="14sp"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/tick"/>

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dryer"
                                android:textSize="14sp"
                                android:layout_marginStart="20dp"/>

                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/imgDryer"
                                android:layout_marginStart="4dp"
                                android:layout_width="14sp"
                                android:layout_height="14sp"
                                android:background="@drawable/tick"/>

                        </LinearLayout>

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wifi"
                                android:textSize="14sp"
                                android:layout_marginStart="20dp"/>

                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/imgWifi"
                                android:layout_width="14sp"
                                android:layout_height="14sp"
                                android:layout_marginStart="4dp"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Parking"
                            android:textSize="14sp"
                            android:layout_marginStart="20dp"/>

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/imgParking"
                            android:layout_width="14sp"
                            android:layout_height="14sp"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/tick"/>

                        <TextView
                            android:layout_marginLeft="25dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dish Washer"
                            android:textSize="14sp"
                            android:layout_marginStart="20dp"/>

                        <ImageView
                            android:id="@+id/imgDish"
                            android:layout_gravity="center_vertical"
                            android:layout_width="14sp"
                            android:layout_height="14sp"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/tick"/>

                    </LinearLayout>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/txtBills"
                        android:layout_marginTop="12dp"
                        android:lineSpacingMultiplier="1.5"
                        android:padding="12dp"
                        android:text="Bills included"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wifi"
                            android:textSize="14sp"
                            android:layout_marginStart="20dp"/>

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:id="@+id/imgWifiBill"
                            android:layout_width="14sp"
                            android:layout_height="14sp"
                            android:layout_marginStart="4dp"
                            />

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bins"
                                android:textSize="14sp"
                                android:layout_marginStart="20dp"/>

                            <ImageView
                                android:id="@+id/imgBins"
                                android:layout_width="14sp"
                                android:layout_height="14sp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="4dp"
                                android:background="@drawable/tick"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heating"
                            android:textSize="14sp"
                            android:layout_marginStart="20dp"/>

                        <ImageView
                            android:id="@+id/imgHeating"
                            android:layout_gravity="center_vertical"
                            android:layout_width="14sp"
                            android:layout_height="14sp"
                            android:layout_marginStart="4dp"
                            android:background="@drawable/tick"/>

                    </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Electricity"
                                android:textSize="14sp"
                                android:layout_marginStart="20dp"/>

                            <ImageView
                                android:layout_gravity="center_vertical"
                                android:id="@+id/imgElectricity"
                                android:layout_marginStart="4dp"
                                android:layout_width="14sp"
                                android:layout_height="14sp"
                                android:background="@drawable/tick"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>





            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="8">

                    <TextView
                        android:id="@+id/textCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingMultiplier="1.5"
                        android:padding="12dp"
                        android:text="Check The Register"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                <TextView
                    android:textSize="12sp"
                    android:layout_weight="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hyperlink"
                    android:id="@+id/hyperlink"
                    android:autoLink="web"
                    >
                </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnShowReview"
                android:textColor="@color/white"
                android:backgroundTint="@color/teal_700"
                android:text="SHOW REVIEWS"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:backgroundTint="@color/grey_2"
                    android:text="Delete"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/btnUpdate"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/teal_700"
                    android:text="Update"
                    android:textColor="@color/white"/>

            </LinearLayout>


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout >