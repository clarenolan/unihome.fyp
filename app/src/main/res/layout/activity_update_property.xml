<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".landlord.UpdateProperty">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:orientation="vertical">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/udImage"
            android:src="@drawable/ic_baseline_insert_photo_24"
            />

        <Button
            android:id="@+id/btnSelectImage"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:text="Select Image"
            android:textSize="18sp"
            android:onClick="btnSelectImage"
            android:textColor="@color/white"
            android:backgroundTint="@color/teal_700"
            />
        <!--            android:onClick="btnSelectImage"-->


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Property Name"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:id="@+id/udPropertyName"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="County"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:id="@+id/udCounty"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:id="@+id/udAddress"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rent Per Week"
            android:layout_marginTop="8dp"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:id="@+id/udPrice"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total Number of Bedrooms"
            android:layout_marginBottom="10dp"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/udTotalBeds">
        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of available bedrooms"
            android:layout_marginBottom="10dp"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/udBeds">
        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number of Bathrooms"
            android:layout_marginBottom="10dp"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/udBathrooms">
        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rental Period"
            android:layout_marginBottom="10dp"
            />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/udPeriod">
        </Spinner>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Bills Included"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:id="@+id/wifiBill2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:text="Wifi"
                    />


                <CheckBox
                    android:id="@+id/bins2"
                    android:layout_width="151dp"
                    android:layout_height="36dp"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:text="Bin Collection" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/electricity2"
                    android:text="Electricity"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"/>

                <CheckBox
                    android:id="@+id/heating2"
                    android:layout_width="823dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:text="Heating" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Amenities"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/washing2"
                    android:text="Washing Machine"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"/>
                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dryer2"
                    android:text="Dryer"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"/>
                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/parking2"
                    android:text="Parking"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"/>

                <CheckBox
                    android:id="@+id/wifi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:text="Wifi"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/dish2"
                    android:text="Dish Washer"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"/>
                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv2"
                    android:text="TV Room"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"/>
                <CheckBox
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/kitchen2"
                    android:text="Communal Kitchen"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available to let: "
                android:layout_marginStart="0dp"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/udActive">
            </Spinner>


        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Property"
            android:textSize="18sp"
            android:backgroundTint="@color/orange"
            android:textColor="@color/white"
            android:onClick="btnUpdateProperty"
            android:layout_marginTop="6dp"
            android:id="@+id/btnUpdateProperty"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Property"
            android:textSize="18sp"
            android:backgroundTint="@color/grey_2"
            android:textColor="@color/white"
            android:onClick="btnDeleteProp"
            android:layout_marginTop="6dp"
            android:id="@+id/btnDeleteProp"
            />
        <!--        android:onClick="btnUpdateProperty"-->





    </LinearLayout>

</ScrollView>